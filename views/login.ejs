<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Login â€” StudyBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/header') %>

    <main class="app-shell" style="display:flex;justify-content:center;padding:48px 0">
      <div style="width:420px">
        <div class="main-card">
          <h3>Sign in</h3>
          <% if (error_msg) { %><div class="toast toast-error"><%= error_msg %></div><% } %>
          <form action="/login" method="POST">
            <label>Email</label>
            <input name="email" class="form-control mb-2" type="email" required />
            <label>Password</label>
            <input name="password" class="form-control mb-2" type="password" required />
            <div style="display:flex;gap:8px">
              <button class="btn btn-primary">Sign in</button>
              <a class="btn btn-ghost" href="/register">Register</a>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
