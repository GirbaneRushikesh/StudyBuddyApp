<!DOCTYPE html>
<html>
  <head>
    <title>Edit Note | StudyBuddy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="/dashboard">
          <span class="brand-logo">SB</span>
          <span>StudyBuddy</span>
        </a>

        <div class="nav-right">
          <% if (username) { %><span class="username">Hi, <%= username %></span><% } %>
          <a class="btn btn-outline-light" href="/profile">Profile</a>
          <a class="btn btn-primary" href="/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <% if (success_msg) { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
      <% if (error_msg) { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>

      <div class="card note-card">
        <div class="card-body">
          <h4>Edit Note</h4>
          <form action="/notes/form/update/<%= note._id %>" method="POST">
            <div class="mb-3">
              <label class="form-label">Title</label>
              <input name="title" class="form-control" value="<%= note.title %>" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Content</label>
              <textarea name="content" class="form-control" rows="8"><%= note.content %></textarea>
            </div>
            <div class="mb-3">
              <label class="form-label">Category</label>
              <input name="category" class="form-control" value="<%= note.category %>" />
            </div>
            <div class="mb-3">
              <label class="form-label">Tags (comma separated)</label>
              <input name="tags" class="form-control" value="<%= (note.tags || []).join(', ') %>" />
            </div>

            <div class="d-flex gap-2">
              <button class="btn btn-primary">Save changes</button>
              <a href="/dashboard" class="btn btn-outline-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>