<!DOCTYPE html>
<html>
  <head>
    <title>New Note | StudyBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/dashboard">StudyBuddy</a>
        <div class="ms-auto">
          <a class="btn btn-light me-2" href="/profile">Profile</a>
          <a class="btn btn-danger" href="/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <a href="/dashboard" class="btn btn-link">&larr; Back</a>
      <div class="card p-3 shadow-sm">
        <h2>New Note</h2>
        <form action="/notes/form/create" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input name="title" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea name="content" class="form-control" rows="8"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Category</label>
            <input name="category" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma separated)</label>
            <input name="tags" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Attachments</label>
            <input name="attachments" multiple type="file" class="form-control" />
          </div>
          <div class="d-flex gap-2">
            <button class="btn btn-primary">Create</button>
            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>