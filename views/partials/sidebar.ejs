<aside class="sidebar fade-in">
  <div class="section-title">Workspace</div>

  <a href="/dashboard">All Notes</a>
  <a href="/notes/create">Create Note</a>
  <a href="/analytics">Analytics</a>

  <hr style="margin:12px 0;border:none;border-top:1px solid rgba(15,23,42,0.04)" />

  <div class="section-title">Tags</div>

  <% if (userTags && userTags.length) { %>
    <% userTags.forEach(tag => { %>
      <form action="/dashboard" method="GET" style="margin-bottom:6px">
        <input type="hidden" name="tag" value="<%= tag %>" />
        <button type="submit" class="btn btn-ghost btn-sm" style="width:100%;text-align:left"><%= tag %></button>
      </form>
    <% }) %>
  <% } else { %>
    <div class="text-muted" style="font-size:13px">No tags yet â€” add tags in Settings or while creating notes.</div>
  <% } %>
</aside>