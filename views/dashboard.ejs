<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Dashboard â€” StudyBuddy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <%- include('partials/header') %>

    <main class="app-shell">
      <div class="app-grid">
        <%- include('partials/sidebar') %>

        <section class="main-card">
          <div class="content-header">
            <div>
              <div class="content-title">Your Notes</div>
              <div class="text-muted">A curated view of your study notes</div>
            </div>

            <div style="display:flex;gap:10px;align-items:center">
              <form action="/dashboard" method="GET" style="display:flex;gap:8px;align-items:center">
                <input name="q" placeholder="Search notes..." class="form-control" style="width:260px" />
              </form>
              <a class="btn btn-primary" href="/notes/create">New Note</a>
            </div>
          </div>

          <div class="notes-grid">
            <% if (!notes || notes.length === 0) { %>
              <div style="grid-column:1/-1">
                <div class="card note-card" style="text-align:center;padding:28px">
                  <h4>No notes yet</h4>
                  <p class="text-muted">Create your first note to get started.</p>
                  <a href="/notes/create" class="btn btn-primary">Create note</a>
                </div>
              </div>
            <% } else { %>
              <% notes.forEach(note => { %>
                <article class="note-card">
                  <div class="note-title"><%= note.title %></div>
                  <div class="note-body"><%= note.content %></div>

                  <div style="display:flex;justify-content:space-between;align-items:center;margin-top:12px">
                    <div class="text-muted" style="font-size:13px"><%= new Date(note.createdAt).toLocaleString() %></div>
                    <div style="display:flex;gap:8px">
                      <a class="btn btn-sm btn-ghost" href="/notes/<%= note._id %>/edit">Edit</a>
                      <form action="/notes/form/delete/<%= note._id %>" method="POST" style="display:inline">
                        <button class="btn btn-sm btn-ghost" type="submit" onclick="return confirm('Delete note?')">Delete</button>
                      </form>
                    </div>
                  </div>
                </article>
              <% }) %>
            <% } %>
          </div>
        </section>
      </div>

      <%- include('partials/footer') %>
    </main>

    <script src="/js/ui.js"></script>
  </body>
</html>