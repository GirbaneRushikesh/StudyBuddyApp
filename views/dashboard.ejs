<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard | StudyBuddy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand" href="/dashboard">
          <span class="brand-logo">SB</span>
          <span>StudyBuddy</span>
        </a>

        <div class="nav-right">
          <% if (username) { %>
            <span class="username">Hi, <%= username %></span>
          <% } %>
          <a class="btn btn-outline-light" href="/profile">Profile</a>
          <a class="btn btn-primary" href="/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container my-4">
      <!-- Flash messages -->
      <% if (success_msg) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <% if (error_msg) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error_msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <h1 class="h3 mb-0">Your Notes</h1>
          <small class="text-muted">Organize, revise and track your study notes</small>
        </div>
        <div class="d-flex gap-2">
          <a class="btn btn-primary" href="/notes/create">+ New Note</a>
        </div>
      </div>

      <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <div>
            <strong><%= total || 0 %></strong> notes
            &nbsp;â€¢&nbsp;
            <strong><%= revised || 0 %></strong> revised
          </div>
          <div style="min-width:250px;">
            <div class="progress" style="height:14px;">
              <div class="progress-bar" role="progressbar" style="width: <%= total ? Math.round((revised/total)*100) : 0 %>%;">
                <%= total ? Math.round((revised/total)*100) : 0 %>%
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <% if (!notes || notes.length === 0) { %>
          <div class="col-12">
            <div class="card p-4 shadow-sm text-center">
              <h5 class="mb-2">No notes yet</h5>
              <p class="text-muted">Create a note to get started. You can attach files, add tags and mark as revised.</p>
              <a class="btn btn-primary" href="/notes/create">Create first note</a>
            </div>
          </div>
        <% } else { %>
          <% notes.forEach(note => { %>
            <div class="col-md-6 mb-4">
              <div class="card h-100 note-card shadow-sm">
                <div class="card-body d-flex flex-column">
                  <div class="d-flex justify-content-between">
                    <h5 class="card-title mb-1"><%= note.title %></h5>
                    <span class="badge bg-info text-dark"><%= note.category %></span>
                  </div>
                  <p class="card-text text-muted mb-2 note-content"><%= note.content %></p>

                  <div class="mt-auto d-flex justify-content-between align-items-center">
                    <div>
                      <small class="text-muted"><%= new Date(note.createdAt).toLocaleString() %></small>
                      <% if (note.tags && note.tags.length) { %>
                        <div class="mt-1"><small class="text-muted">Tags: <%= note.tags.join(", ") %></small></div>
                      <% } %>
                    </div>

                    <div class="d-flex gap-2 align-items-center">
                      <a href="/notes/<%= note._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>

                      <form action="/notes/form/delete/<%= note._id %>" method="POST" style="display:inline">
                        <button class="btn btn-sm btn-outline-danger" type="submit" onclick="return confirm('Delete this note?')">Delete</button>
                      </form>

                      <form action="/notes/form/toggle/<%= note._id %>" method="POST" style="display:inline">
                        <button class="btn btn-sm <%= note.revised ? 'btn-success' : 'btn-outline-secondary' %>" type="submit">
                          <%= note.revised ? 'Revised' : 'Mark Revised' %>
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>